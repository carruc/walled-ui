{
  "manifest_version": 3,
  "name": "Walled UI",
  "version": "1.0",
  "description": "A Chromium extension to interact with an agentic framework.",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["confirmation.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
